<h1>Edit <% @movie.title %></h1>
<form action="/movies/<%= @movie.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Title:</label>
		<input type="text" name="movie[title]" value="<%= @movie.title %>">
	</p>
	<p>
		<label>Duration:</label>
		<input type="text" name="movie[duration]" value="<%= @movie.duration %>">
	</p>
	<p>
		<label>Rating:</label>
		<input type="text" name="movie[rating]" value="<%= @movie.rating %>">
	</p>
	<p>
		<label>Release Date:</label>
		<input type="text" name="movie[release_date]" value="<%= @movie.release_date.strftime("%Y-%m-%d") %>">
	</p>
	<input type="submit" value="Update">
</form>

<% if flash[:errors]  %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>